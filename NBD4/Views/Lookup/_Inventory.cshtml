<br />
<div class="card mb-sm-3" style="min-width: 18rem;">
    <h4 class="card-header" id="Inventory">Inventory Items</h4>
    <div class="card-body">
        @Html.DropDownList("InventoryID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
    </div>
    @{
        if (User.IsInRole("Sales Associate") || User.IsInRole("Designer"))
        {
            <div class="card-footer">
                <a asp-controller="Inventory" asp-action="Create">Create</a> |
                <a asp-controller="Inventory" asp-action="Edit" class="linkClick">Edit</a> 
            </div>
        }
        else if (User.IsInRole("Admin"))
        {
            <div class="card-footer">
                <a asp-controller="Inventory" asp-action="Create">Create</a> |
                <a asp-controller="Inventory" asp-action="Edit" class="linkClick">Edit</a> |
                <a asp-controller="Inventory" asp-action="Delete" class="linkClick">Delete</a>
            </div>
        }
    }
