@model NBD4.Models.City
<form asp-controller="City" asp-action="Create" id="createCityForm">
    <div class="text-danger validation-summary-errors"><ul id="ErrorList"></ul></div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProvinceID" class="control-label"></label>
                <select asp-for="ProvinceID" class="form-control" asp-items="ViewBag.ProvinceID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="submitCityCreate" class="btn btn-outline-secondary" />
            </div>
        </div>  
    </div>
</form>
    