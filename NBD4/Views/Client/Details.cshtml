@model NBD4.Models.Client

<partial name="_ViewHeading" />

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactFirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactFirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactMiddleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactMiddleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactLastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactLastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneFormatted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Projects)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Projects.FirstOrDefault().Site)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Projects.FirstOrDefault().StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Projects.FirstOrDefault().EndDate)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Projects)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Project" asp-action="Details"
                                   asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Site)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    @* <a asp-controller="Project" asp-action="Create" asp-route-clientId="@Model.ID">Create New Project</a> | *@
     <a href='@ViewData["returnURL"]'>Back to the @ViewData["ControllerName"] List</a>
</div>


<div>
    <a asp-controller="Project" asp-action="Create" asp-route-clientId="@Model.ID" class="btn btn-primary">Create Project</a>
</div>